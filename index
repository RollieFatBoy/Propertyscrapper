<body>
    <div class="container">
        <div class="header">
            <h1>üè† Domain.com.au Property Scraper</h1>
            <p>Extract and analyze property listings with ease</p>
        </div>

        <div class="content">
            <div class="input-section">
                <h2 style="margin-bottom: 20px;">Search Parameters</h2>
                
                <div class="form-group">
                    <label for="location">Location (e.g., sydney-nsw-2000)</label>
                    <input type="text" id="location" placeholder="sydney-nsw-2000" value="sydney-nsw-2000">
                </div>

                <div class="form-group">
                    <label for="listingType">Listing Type</label>
                    <select id="listingType">
                        <option value="buy">For Sale</option>
                        <option value="rent">For Rent</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="maxPages">Maximum Pages to Scrape</label>
                    <input type="number" id="maxPages" min="1" max="10" value="3">
                </div>

                <button class="btn" onclick="startScraping()">Start Scraping</button>
                <button class="btn btn-secondary" onclick="exportToCSV()">Export to CSV</button>
                <button class="btn btn-secondary" onclick="exportToJSON()">Export to JSON</button>
            </div>

            <div id="status" class="status"></div>

            <div id="loading" class="loading">
                <div class="spinner"></div>
                <p>Scraping properties... Please wait.</p>
            </div>

            <div id="results" class="results" style="display: none;">
                <h2 style="margin-bottom: 20px;">Results</h2>
                
                <div class="stats" id="stats"></div>

                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Address</th>
                                <th>Price</th>
                                <th>Type</th>
                                <th>Beds</th>
                                <th>Baths</th>
                                <th>Parking</th>
                                <th>Link</th>
                            </tr>
                        </thead>
                        <tbody id="tableBody"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        let scrapedData = [];

        function showStatus(message, type) {
            const statusDiv = document.getElementById('status');
            statusDiv.textContent = message;
            statusDiv.className = `status ${type}`;
            statusDiv.style.display = 'block';
        }

        function showLoading(show) {
            document.getElementById('loading').style.display = show ? 'block' : 'none';
            document.querySelector('.btn').disabled = show;
        }

        async function startScraping() {
            const location = document.getElementById('location').value;
            const listingType = document.getElementById('listingType').value;
            const maxPages = parseInt(document.getElementById('maxPages').value);

            if (!location) {
                showStatus('Please enter a location', 'error');
                return;
            }

            showLoading(true);
            showStatus('Scraping in progress...', 'info');
            document.getElementById('results').style.display = 'none';

            scrapedData = [];

            try {
                for (let page = 1; page <= maxPages; page++) {
                    showStatus(`Scraping page ${page} of ${maxPages}...`, 'info');
                    
                    const url = listingType === 'buy' 
                        ? `https://www.domain.com.au/sale/${location}/?page=${page}`
                        : `https://www.domain.com.au/rent/${location}/?page=${page}`;

                    // Note: Direct scraping from browser has CORS limitations
                    // This is a demonstration - you'll need a proxy or backend
                    const response = await fetch(url, {
                        mode: 'cors',
                        headers: {
                            'User-Agent': 'Mozilla/5.0'
                        }
                    });

                    const html = await response.text();
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');

                    // Parse listings (selectors may need adjustment)
                    const listings = doc.querySelectorAll('[data-testid="listing-card-wrapper"]');
                    
                    listings.forEach(listing => {
                        const property = extractPropertyData(listing, listingType);
                        if (property) {
                            scrapedData.push(property);
                        }
                    });

                    // Delay between requests
                    await new Promise(resolve => setTimeout(resolve, 2000));
                }

                showLoading(false);
                if (scrapedData.length > 0) {
                    showStatus(`Successfully scraped ${scrapedData.length} properties!`, 'success');
                    displayResults();
                } else {
                    showStatus('No properties found. The site structure may have changed or CORS is blocking the request.', 'error');
                }

            } catch (error) {
                showLoading(false);
                showStatus(`Error: ${error.message}. Note: Browser-based scraping has CORS limitations. Consider using a backend server.`, 'error');
                console.error(error);
            }
        }

        function extractPropertyData(listing, listingType) {
            try {
                const data = {
                    address: listing.querySelector('[data-testid="address"]')?.textContent?.trim() || 'N/A',
                    price: listing.querySelector('[data-testid="listing-card-price"]')?.textContent?.trim() || 'N/A',
                    propertyType: listing.querySelector('[data-testid="property-type"]')?.textContent?.trim() || 'N/A',
                    bedrooms: listing.querySelector('[data-testid="property-features-bed"]')?.textContent?.trim() || 'N/A',
                    bathrooms: listing.querySelector('[data-testid="property-features-bath"]')?.textContent?.trim() || 'N/A',
                    parking: listing.querySelector('[data-testid="property-features-parking"]')?.textContent?.trim() || 'N/A',
                    url: listing.querySelector('a')?.href || 'N/A',
                    listingType: listingType,
                    scrapedDate: new Date().toISOString()
                };

                return data;
            } catch (error) {
                console.error('Error extracting property data:', error);
                return null;
            }
        }

        function displayResults() {
            document.getElementById('results').style.display = 'block';

            // Display stats
            const statsHtml = `
                <div class="stat-card">
                    <h3>${scrapedData.length}</h3>
                    <p>Total Listings</p>
                </div>
                <div class="stat-card">
                    <h3>${new Set(scrapedData.map(p => p.propertyType)).size}</h3>
                    <p>Property Types</p>
                </div>
                <div class="stat-card">
                    <h3>${new Date().toLocaleDateString()}</h3>
                    <p>Last Scraped</p>
                </div>
            `;
            document.getElementById('stats').innerHTML = statsHtml;

            // Display table
            const tableBody = document.getElementById('tableBody');
            tableBody.innerHTML = '';

            scrapedData.forEach(property => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${property.address}</td>
                    <td>${property.price}</td>
                    <td>${property.propertyType}</td>
                    <td>${property.bedrooms}</td>
                    <td>${property.bathrooms}</td>
                    <td>${property.parking}</td>
                    <td><a href="${property.url}" target="_blank" class="property-link">View</a></td>
                `;
                tableBody.appendChild(row);
            });
        }

        function exportToCSV() {
            if (scrapedData.length === 0) {
                showStatus('No data to export. Please scrape some properties first.', 'error');
                return;
            }

            const headers = ['Address', 'Price', 'Property Type', 'Bedrooms', 'Bathrooms', 'Parking', 'URL', 'Listing Type', 'Scraped Date'];
            const csv = [
                headers.join(','),
                ...scrapedData.map(p => [
                    `"${p.address}"`,
                    `"${p.price}"`,
                    `"${p.propertyType}"`,
                    p.bedrooms,
                    p.bathrooms,
                    p.parking,
                    `"${p.url}"`,
                    p.listingType,
                    p.scrapedDate
                ].join(','))
            ].join('\n');

            downloadFile(csv, `domain_listings_${Date.now()}.csv`, 'text/csv');
            showStatus('CSV file downloaded successfully!', 'success');
        }

        function exportToJSON() {
            if (scrapedData.length === 0) {
                showStatus('No data to export. Please scrape some properties first.', 'error');
                return;
            }

            const json = JSON.stringify(scrapedData, null, 2);
            downloadFile(json, `domain_listings_${Date.now()}.json`, 'application/json');
            showStatus('JSON file downloaded successfully!', 'success');
        }

        function downloadFile(content, filename, contentType) {
            const blob = new Blob([content], { type: contentType });
            const url = URL.createObjectURL(blob);
            const link = document.createElement('a');
            link.href = url;
            link.download = filename;
            link.click();
            URL.revokeObjectURL(url);
        }
    </script>
</body>
</html>
